generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medida {
  id Int @id @default(autoincrement())
  temperatura Float
  umidade Float
  luminosidade Float
  gas Float
  chanceVida Float
  dataHora DateTime @default(now()) @unique
  imagem Imagem?
}

model Imagem {
  id Int @id @default(autoincrement())
  url String
  medidaId Int @unique
  medida Medida @relation(fields: [medidaId], references: [id])
}